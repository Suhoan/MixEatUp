<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add Bill:</h3>
        <%= simple_form_for @bill do |f| %>
          <%= f.input :date_of_visit %>
          <%= f.input :restaurant.name %>
          <%= f.input :number_of_people %>
          <%= f.input :food_price %>
          <%= f.input :drink_price %>
          <%= f.input :total_price %>

          <%= f.submit "Submit Bill", class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
